<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.exposedrealfunme" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/Primary_color</item>
        <item name="colorPrimaryVariant">@color/Primary_color</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="black">@color/black</item>
        <item name="backgroundClr">@color/white</item>
        <item name="colorOnSecondary">#285285</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/Background_color</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- Customize your theme here. -->
        <item name="android:windowAnimationStyle">@style/YourAnimation.Activity</item>
        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>
        <item name="bottomNavigationStyle">@style/Widget.App.BottomNavigationView</item>
    </style>

    <style name="Widget.App.BottomNavigationView" parent="Widget.Material3.BottomNavigationView">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.BottomNavigationView</item>
        <item name="android:background">@color/Background_color</item>
    </style>

    <style name="ThemeOverlay.App.BottomNavigationView" parent="">
        <item name="colorPrimary">@color/Third_color</item>
        <item name="colorOnPrimary">@color/Secondary_color</item>
        <item name="colorSecondaryContainer">@color/Secondary_color</item>
        <item name="background">@color/Third_color</item>
    </style>

    <!--Sheet style-->

    <style name="AppBottomSheetDialogTheme"
        parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>

    <style name="AppModalStyle"
        parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/rounded_dialog</item>
    </style>

    <!--/Sheet style-->

    <!--Activity Animation-->

    <style name="YourAnimation.Activity" parent="@android:style/Animation.Activity">
        <item name="android:activityCloseEnterAnimation">@android:anim/slide_in_left</item>
        <item name="android:activityCloseExitAnimation">@android:anim/slide_out_right</item>
    </style>
</resources>